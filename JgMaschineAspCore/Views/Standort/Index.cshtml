@model IEnumerable<JgLibDataModel.TabStandort>

@{
    ViewData["Title"] = "Standorte";
}

<br />
<h4>Standorte verwalten</h4>
<div class="form-group">
    <a asp-action="Create" class="btn btn-primary"> Neuen Standort erstellen</a>
</div>


@if (Model.Count() == 0)
{
    <p>Keine Standorte vorhanden</p>
}
else
{
    <table class="table table-hover table-striped table-sm">
        <thead>
            <tr>
                <th>Bezeichnung</th>
                <th></th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.StandortName</td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id"> bearbeiten </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}

