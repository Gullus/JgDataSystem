<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JgMaschineAspCore</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-start.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css" />

</head>
<body>

    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

            <a class="navbar-brand" asp-action="Index" asp-controller="Home">
                <span>
                    <img src="~/images/SportLogoKlein.JPG" width="30" height="30" class="d-inline-block align-top" alt="">
                    JgMaschineSystem
                </span>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>


            <div class="navbar-collapse collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="Index" asp-controller="Maschine">Maschinen<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="IndexMeldungProtokoll" asp-controller="Maschine" asp-route-Prog="OFFEN">Protokolle</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="IndexMeldungen" asp-controller="Bediener">Meldungen</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Auswertung</a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>

        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - JgMaschineAspCore</p>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
