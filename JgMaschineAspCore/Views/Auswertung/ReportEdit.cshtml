@model JgLibDataModel.TabReport

@{
    ViewBag.Title = "Report bearbeiten";
}

<br />
<h2>@(Model.Id == Guid.Empty ? "Neuen Report erstellen" : $"Report {Model.ReportName} bearbeiten")</h2>
<br />
<p>Hier werden Informationen zur Eingabe der Daten eingegeben</p>
<hr />

<form action="" method="post" enctype="multipart/form-data">

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)


    <div class="form-group">
        <label>Reportname</label>
        @Html.EditorFor(model => model.ReportName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ReportName, "", new { @class = "text-danger" })
    </div>

    <div class="row">
        <div class="col-md-10">
            <div class="form-group">
                <label>Dateiname</label>
                <input type="file" class="form-control mw-100" name="DateiName" id="DateiName" />
                @Html.ValidationMessage("DateiName");
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10">
            <div class="form-group">
                <label>Beschreibung</label>
                @Html.TextAreaFor(model => model.Beschreibung, 10, 500, new { @class = "form-control mw-100" })
            </div>
        </div>
    </div>

    <input type="submit" value=" Änderung Speichern " class="btn btn-primary" />
    <a class="btn btn-outline-primary" href="@Url.Action("Index")">Abbrechen </a>
</form>

<br />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
