@model JgLibDataModel.TabBediener
@{
    ViewBag.Title = "Bediener Bearbeiten";
}

<br />
<h2>Bediener Bearbeiten</h2>
<br />
<p>Hier werden Informationen zur Eingabe der Daten eingegeben</p>
<hr />

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-header">
                    Benutzerdaten
                </div>
                <div class="card-body">

                    <div class="form-group">
                        <label>Vorname</label>
                        @Html.EditorFor(model => model.Vorname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Vorname, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Nachname</label>
                        @Html.EditorFor(model => model.Nachname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nachname, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Ausweisnummer</label>
                        @Html.EditorFor(model => model.NummerAusweis, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NummerAusweis, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <br />

            <div class="card">
                <div class="card-body">
                    <input type="submit" value=" Änderung Speichern " class="btn btn-primary" />
                    <a class="btn btn-outline-primary" href="@Url.Action("Index")">Abbrechen </a>
                </div>
            </div>
            
        </div>
    </div>
}

<br />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}